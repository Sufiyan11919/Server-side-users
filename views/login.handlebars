<div class="main">  	
	<input type="checkbox" id="chk" aria-hidden="true">

		<div class="signup">
			<form class="signup-form">
				<label for="chk" aria-hidden="true">Sign up</label>
				<input id="username-signup" type="text" name="txt" placeholder="Username" required="">
				<input id="email-signup" type="email" name="email" placeholder="Email" required="">
				<input id="password-signup" type="password" name="pswd" placeholder="Password" required="">
				<button class="signup-btn" id="signup-btn" type="submit" >Sign up</button>
			</form>
		</div>

		<div class="login">
			<form class="login-form">
				<label for="chk" aria-hidden="true">Login</label>
				<input id="email-login" type="email" name="email" placeholder="Email" required="">
				<input id="password-login" type="password" name="pswd" placeholder="Password" required="">
				<button class="login-btn" id="login-btn" type="submit">Login</button>
			</form>
			
		</div>
</div>
